extends layout

block content

	h3.smth.d-flex.justify-content-center Please enter prescription here
 
	if errors
		each error, i in errors
			div.alert.alert-danger #{error.msg}

	form(method='get', action='/getPrescription')
		.form-group
			label Container 1
			select.form-control(name = 'cont1')
				option(value = '0') Select
				option(value = '1') Count: 1
				option(value = '2') Count: 2
				option(value = '3') Count: 3
		.form-group
			label Container 2
			select.form-control(name = 'cont2')
				option(value = '0') Select
				option(value = '1') Count: 1
				option(value = '2') Count: 2
				option(value = '3') Count: 3
	

	input.btn.btn-primary(type='submit', name='submit',value = 'Submit')
